doctype html
html(lang='it')
  head
    title Il Secret Santa di SpazioPC
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='icon', type='image/png', href='/img/favicon.png')
    link(rel='shortcut icon', type='image/png', href='/img/favicon.png')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/style/style.css')

  body
    .snow-container
    nav.navbar.navbar-expand-lg
      .container
        .d-flex.align-items-center
          a.navbar-brand(href='/') Home
          .navbar-nav.d-flex.flex-row.ms-3.gap-3
            a.nav-link(href='/faq') FAQ
        .d-flex.align-items-center.ms-auto
          if user
            .nav-link.d-flex.align-items-center
              img.avatar.rounded-circle(src=user.steam_avatar alt='Avatar' width='32' height='32')
            if user.steam_id === process.env.ADMIN_STEAM_ID
              .nav-link.d-flex.align-items-center
                a.btn.btn-danger.d-inline.ms-3(href='/admin') Admin
            form(action='/logout', method='post', class='nav-link d-inline ms-3')
              button.btn.btn-secondary(type='submit') Logout
          .nav-link.d-flex.align-items-center.form-check.form-switch
            input#toggleSnow.d-inline.ms-3.form-check-input(type='checkbox' checked)
            div.form-check-label-wrapper.ms-1
              label.form-check-label.small(for='toggleSnow') Neve

    .container.d-flex.align-items-center.justify-content-center.text-center.py-5
      block content

    footer.footer.text-center.py-5.mt-4
      p
        | Made with â˜• by&nbsp;
        a(href='https://forum.spaziogames.it/members/onizm.42969/' target='_blank') oniZM
        | &nbsp;for&nbsp;
        a(href='https://forum.spaziogames.it/forums/spazio-pc.23/' target='_blank') SpazioPC

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')
    script(src='/js/script.js')
